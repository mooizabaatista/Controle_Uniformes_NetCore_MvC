<!-- Import model -->
@model Requisicao_RSS.Application.DTOs.FuncionarioDTO
<!-- Header -->
<div class="row">
    <div class="col-12 text-center mt-3 mb-3">
        <h2 style="font-weight: 200">Editar Funcionário</h2>
    </div>
</div>

<!-- Formulário de edição de funcionário -->
<form asp-action="Edit" method="POST">
    <div class="form-horizontal" style="width:70%; margin: 0 auto;">

        <input type="hidden" asp-for="FuncionarioId" value="@Model.FuncionarioId" />

        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <!-- Registro -->
                    <label asp-for="Registro">Registro</label>
                    <input asp-for="Registro" class="form-control" />
                </div>
                <div class="col-md-9">
                    <!-- Nome -->
                    <label asp-for="Nome">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <!-- Função -->
                    <label asp-for="Funcao">Função</label>
                    <select class="form-control" asp-for="Funcao">
                        <option value="">Selecione</option>
                        <option>Coletor</option>
                        <option>Motorista</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <!-- Turno -->
                    <label asp-for="Turno">Turno</label>
                    <select class="form-control" asp-for="Turno">
                        <option value="">Selecione</option>
                        <option>Diurno</option>
                        <option>Noturno</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <!-- BaseCamisa -->
                    <label asp-for="BaseCamisa">Base Camisa</label>
                    <select class="form-control" asp-for="BaseCamisa" asp-items="(SelectList)ViewBag.TamanhosCamisa">
                        <option value="">Selecione</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <!-- Base Calça -->
                    <label asp-for="BaseCalca">Base Calça</label>
                    <select class="form-control" asp-for="BaseCalca" asp-items="(SelectList)ViewBag.TamanhosCalca">
                        <option value="">Selecione</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Ações -->
        <div class="form-group">
            <div class="row mt-4">
                <div class="col-12">
                    <div class="d-flex justify-content-start">
                        <button type="submit" class="btn btn-primary d-flex btn-acoes btn-add">
                            <span class="mr-1">Editar</span>
                            <i class="material-icons" style="font-size:15px;color:white;">edit</i>
                        </button>
                        <div class="btn btn-danger d-flex btn-acoes ml-3">
                            <a style="color:#fff;" asp-action="Index"><span class="mr-1">Cancelar</span></a>
                            <i class="material-icons" style="font-size:14px;color:white;">clear</i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
